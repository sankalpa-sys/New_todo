
<center><br><br><br>

  <h3>Send a message</h3><br>
  <%=form_with model: @message do |form| %>
    <%= form.text_field :fullname, placeholder: "Full Name" %><br><br>
    <%= form.email_field :email, placeholder: "Email" %><br><br>
    <%= form.text_field :phone, placeholder: "Phone Number" %><br><br>
    <%= form.text_area :message, placeholder: "Message", rows: 10 %><br><br><br>

    <%= form.submit "Send" ,:class => "btn btn-danger"%>
  <% end %>
</center>


